<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ActivityBackground"
    tools:context="ru.apptrust.robotacademyremotecontrolapp.MainActivity"
    android:orientation="horizontal"
    android:weightSum="3">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo1"
        android:layout_weight="1"/>

    <ru.apptrust.robotacademyremotecontrolapp.SpeedTrackSlider
        android:id="@+id/speedTrackSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_weight="2"></ru.apptrust.robotacademyremotecontrolapp.SpeedTrackSlider>
</LinearLayout>
